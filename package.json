{
   "name": "web-ignition",
   "description": "Start a fire",
   "version": "1.5.8",
   "license": "MIT",
   "type": "module",
   "module": "dist/lib-x.js",
   "jsdelivr": "dist/lib-x.min.js",
   "style": "dist/reset.min.css",
   "types": "dist/lib-x.d.ts",
   "files": [
      "dist"
   ],
   "exports": {
      ".": "./dist/lib-x.js",
      "./": "./dist/"
   },
   "repository": "github:center-key/web-ignition",
   "homepage": "https://github.com/center-key/web-ignition",
   "bugs": "https://github.com/center-key/web-ignition/issues",
   "docs": "https://github.com/center-key/web-ignition#readme",
   "keywords": [
      "css",
      "css-reset",
      "html",
      "javascript",
      "layouts",
      "web"
   ],
   "jshintConfig": {
      "esversion": 9,
      "strict": "implied",
      "eqeqeq": true,
      "undef": true,
      "unused": true,
      "browser": true,
      "jquery": true,
      "mocha": true,
      "node": true,
      "globals": {
         "dna": false
      }
   },
   "eslintConfig": {
      "ignorePatterns": [
         "build",
         "dist",
         "node_modules"
      ],
      "root": true,
      "parser": "@typescript-eslint/parser",
      "plugins": [
         "@typescript-eslint"
      ],
      "extends": [
         "eslint:recommended",
         "plugin:@typescript-eslint/recommended"
      ],
      "rules": {
         "@typescript-eslint/no-non-null-assertion": "off"
      }
   },
   "customBlogger": {
      "shortBlogName": "Dem&apos;s Blog",
      "bookmarkUrl": "https://centerkey.com/graphics/bookmark.png",
      "mobileHomeScreenUrl": "https://centerkey.com/graphics/mobile-home-screen.png",
      "authorsUrl": "https://centerkey.com/dem",
      "twitterUsername": "DemPilafian"
   },
   "cdnVersion": {
      "highlightjs": "11.6"
   },
   "scripts": {
      "step:01": "rimraf build dist **/.DS_Store",
      "step:02": "jshint . --exclude-path .gitignore",
      "step:03": "eslint --max-warnings 0 . --ext .ts",
      "step:10": "tsc",
      "step:11": "lessc src/css/reset.less build/step1/reset.css",
      "step:12": "copy-file src/css/reset-color-overrides.css --folder build/step2",
      "step:13": "csso build/step1/reset.css --output build/step2/core-reset.min.css",
      "step:14": "replacer build/step2 --ext=.css build --concat=reset.min.css",
      "step:15": "gulp build-layouts-css",
      "step:20": "lessc src/css/blogger-tweaks/style.less build/step3/blogger-tweaks.css",
      "step:21": "copy-file src/css/blogger-tweaks/instructions.css --folder build/step4",
      "step:22": "csso build/step3/blogger-tweaks.css --output build/step4/blogger-tweaks.min.css",
      "step:23": "replacer build/step4 --ext=.css build --pkg --concat=blogger-tweaks.min.css",
      "step:30": "esm-to-plain-js --cd=build lib-x.js lib-x.dev.js",
      "step:31": "uglifyjs build/lib-x.dev.js --output build/lib-x.min.js",
      "step:32": "uglifyjs src/css/layouts/neon.js --output build/layouts/neon.min.js",
      "step:40": "add-dist-header build dist",
      "step:41": "add-dist-header build/layouts dist/layouts",
      "step:42": "copy-folder src/css/layouts/neon --ext=.jpg dist/layouts/neon",
      "step:50": "gulp customize-blogger",
      "step:60": "html-validator",
      "pretest": "npm-run-all step:*",
      "test": "mocha spec/*.spec.js"
   },
   "dependencies": {
      "dna-engine": "~2.2",
      "fetch-json": "~2.7",
      "highlight.js": "~11.6",
      "hljs-enhance": "~1.1",
      "jquery": "~3.6"
   },
   "devDependencies": {
      "@fortawesome/fontawesome-free": "~6.2",
      "@types/jquery": "~3.5",
      "@types/node": "~18.8",
      "@typescript-eslint/eslint-plugin": "~5.40",
      "@typescript-eslint/parser": "~5.40",
      "add-dist-header": "~0.3",
      "assert-deep-strict-equal": "~1.0",
      "copy-file-util": "~0.1",
      "copy-folder-util": "~0.2",
      "csso-cli": "~4.0",
      "eslint": "~8.25",
      "esm-to-plain-js": "~0.1",
      "gulp": "~4.0",
      "gulp-append-prepend": "~1.0",
      "gulp-rename": "~2.0",
      "gulp-replace": "~1.1",
      "gulp-size": "~4.0",
      "jshint": "~2.13",
      "less": "~4.1",
      "mocha": "~10.0",
      "npm-run-all2": "~6.0",
      "replacer-util": "~0.2",
      "rimraf": "~3.0",
      "typescript": "~4.8",
      "uglify-js": "~3.17",
      "w3c-html-validator": "~1.1"
   }
}
