{
   "name": "web-ignition",
   "description": "Start a fire",
   "version": "1.4.9",
   "license": "MIT",
   "type": "module",
   "module": "dist/lib-x.js",
   "jsdelivr": "dist/lib-x.min.js",
   "style": "dist/reset.min.css",
   "types": "dist/lib-x.d.ts",
   "files": [
      "dist"
   ],
   "exports": {
      ".": "./dist/lib-x.js",
      "./": "./dist/"
   },
   "repository": "github:center-key/web-ignition",
   "homepage": "https://github.com/center-key/web-ignition",
   "bugs": "https://github.com/center-key/web-ignition/issues",
   "docs": "https://github.com/center-key/web-ignition#readme",
   "keywords": [
      "css",
      "css-reset",
      "html",
      "javascript",
      "layouts",
      "web"
   ],
   "jshintConfig": {
      "esversion": 9,
      "strict": "implied",
      "eqeqeq": true,
      "undef": true,
      "unused": true,
      "browser": true,
      "jquery": true,
      "node": true,
      "globals": {
         "dna": false
      }
   },
   "eslintConfig": {
      "ignorePatterns": [
         "build",
         "dist",
         "node_modules"
      ],
      "root": true,
      "parser": "@typescript-eslint/parser",
      "plugins": [
         "@typescript-eslint"
      ],
      "extends": [
         "eslint:recommended",
         "plugin:@typescript-eslint/recommended"
      ],
      "rules": {
         "@typescript-eslint/no-non-null-assertion": "off"
      }
   },
   "scripts": {
      "step:01": "rimraf build dist **/.DS_Store",
      "step:02": "jshint . --exclude node_modules,build,dist",
      "step:03": "eslint --max-warnings 0 . --ext .ts",
      "step:04": "tsc",
      "step:05": "gulp build-reset-css",
      "step:06": "gulp build-layouts-css",
      "step:07": "gulp build-blogger-css",
      "step:08": "gulp build-layouts-js",
      "step:09": "gulp build-lib-js",
      "step:10": "add-dist-header build dist",
      "step:11": "add-dist-header build/layouts dist/layouts",
      "step:12": "cpy 'src/css/layouts/neon/*.jpg' dist/layouts/neon",
      "step:13": "gulp customize-blogger",
      "pretest": "npm-run-all step:*",
      "test": "w3c-html-validator"
   },
   "dependencies": {
      "dna.js": "~1.9",
      "fetch-json": "~2.6",
      "highlight.js": "~11.4",
      "hljs-enhance": "~1.0",
      "jquery": "~3.6"
   },
   "devDependencies": {
      "@babel/core": "~7.16",
      "@babel/preset-env": "~7.16",
      "@fortawesome/fontawesome-free": "~5.15",
      "@types/jquery": "~3.5",
      "@types/node": "~17.0",
      "@typescript-eslint/eslint-plugin": "~5.10",
      "@typescript-eslint/parser": "~5.10",
      "add-dist-header": "~0.1",
      "babel-minify": "~0.5",
      "cpy-cli": "~3.1",
      "cssnano": "~5.0",
      "eslint": "~8.8",
      "gulp": "~4.0",
      "gulp-append-prepend": "~1.0",
      "gulp-babel": "~8.0",
      "gulp-less": "~5.0",
      "gulp-postcss": "~9.0",
      "gulp-rename": "~2.0",
      "gulp-replace": "~1.1",
      "gulp-size": "~4.0",
      "jshint": "~2.13",
      "npm-run-all2": "~5.0",
      "postcss": "~8.4",
      "postcss-font-magician": "~3.0",
      "postcss-preset-env": "~7.3",
      "rimraf": "~3.0",
      "typescript": "~4.5",
      "w3c-html-validator": "~1.0"
   }
}
