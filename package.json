{
   "name": "web-ignition",
   "description": "Start a fire",
   "version": "2.0.0",
   "license": "MIT",
   "type": "module",
   "module": "dist/lib-x.js",
   "jsdelivr": "dist/lib-x.min.js",
   "style": "dist/reset.min.css",
   "types": "dist/lib-x.d.ts",
   "files": [
      "dist"
   ],
   "exports": {
      ".": "./dist/lib-x.js",
      "./": "./dist/"
   },
   "repository": "github:center-key/web-ignition",
   "homepage": "https://github.com/center-key/web-ignition",
   "bugs": "https://github.com/center-key/web-ignition/issues",
   "docs": "https://github.com/center-key/web-ignition#readme",
   "keywords": [
      "css",
      "css-reset",
      "html",
      "javascript",
      "layouts",
      "web"
   ],
   "jshintConfig": {
      "esversion": 11,
      "strict": "implied",
      "eqeqeq": true,
      "undef": true,
      "unused": true,
      "browser": true,
      "mocha": true,
      "node": true,
      "globals": {
         "dna": false
      }
   },
   "eslintConfig": {
      "ignorePatterns": [
         "build",
         "dist",
         "node_modules"
      ],
      "root": true,
      "parser": "@typescript-eslint/parser",
      "plugins": [
         "@typescript-eslint"
      ],
      "extends": [
         "eslint:recommended",
         "plugin:@typescript-eslint/recommended"
      ],
      "rules": {
         "@typescript-eslint/no-non-null-assertion": "off"
      }
   },
   "cdnVersion": {
      "highlightjs": "11.8"
   },
   "runScriptsConfig": {
      "clean": [
         "rimraf build dist"
      ],
      "lint": [
         "jshint . --exclude-path .gitignore",
         "eslint --max-warnings 0 . --ext .ts"
      ],
      "blogger": [
         "lessc src/css/blogger-tweaks/style.less build/step3/blogger-tweaks.css",
         "replacer src/css/blogger-tweaks/instructions.css build/step4 --regex=/{{apos}}{{gt}}$/gm --replacement={{apos}}/{{gt}}",
         "csso build/step3/blogger-tweaks.css --output build/step4/blogger-tweaks.min.css",
         "replacer build/step4 --ext=.css build --pkg --concat=blogger-tweaks.min.css"
      ],
      "build": [
         "tsc",
         "lessc src/css/reset.less build/step1/reset.css",
         "copy-file src/css/reset-color-overrides.css --folder build/step2",
         "csso build/step1/reset.css --output build/step2/core-reset.min.css",
         "replacer build/step2 --ext=.css build --concat=reset.min.css",
         "replacer src/css/layouts --ext=.css build/layouts --pkg",
         "esm-to-plain-js --cd=build lib-x.js lib-x.dev.js",
         "uglifyjs build/lib-x.dev.js --output build/lib-x.min.js",
         "uglifyjs src/css/layouts/neon.js --output build/layouts/neon.min.js",
         "add-dist-header build dist",
         "add-dist-header build/layouts dist/layouts",
         "copy-folder src/css/layouts/neon --ext=.jpg dist/layouts/neon"
      ],
      "validate": [
         "html-validator"
      ]
   },
   "scripts": {
      "pretest": "run-scripts clean lint blogger build validate",
      "test": "mocha spec/*.spec.js"
   },
   "dependencies": {
      "dna-engine": "~3.0",
      "fetch-json": "~3.1",
      "highlight.js": "~11.8",
      "hljs-enhance": "~1.1"
   },
   "devDependencies": {
      "@fortawesome/fontawesome-free": "~6.4",
      "@types/node": "~20.3",
      "@typescript-eslint/eslint-plugin": "~5.59",
      "@typescript-eslint/parser": "~5.59",
      "add-dist-header": "~1.0",
      "assert-deep-strict-equal": "~1.0",
      "copy-file-util": "~1.0",
      "copy-folder-util": "~1.0",
      "csso-cli": "~4.0",
      "eslint": "~8.42",
      "esm-to-plain-js": "~1.0",
      "jshint": "~2.13",
      "less": "~4.1",
      "mocha": "~10.2",
      "replacer-util": "~1.0",
      "rimraf": "~5.0",
      "run-scripts-util": "~1.1",
      "typescript": "~5.1",
      "uglify-js": "~3.17",
      "w3c-html-validator": "~1.3"
   }
}
